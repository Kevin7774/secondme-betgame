# Database (Vercel/Neon/Supabase Postgres)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME

# SecondMe OAuth2
SECONDME_CLIENT_ID=your-client-id
SECONDME_CLIENT_SECRET=your-client-secret
# Optional. If empty, app auto-uses "{current-origin}/api/auth/callback".
# SECONDME_REDIRECT_URI=http://localhost:3000/api/auth/callback
SECONDME_ALLOWED_SCOPES="user.info user.info.shades user.info.softmemory chat note.add voice"

# SecondMe API
SECONDME_API_BASE_URL=https://app.mindos.com/gate/lab
SECONDME_API_PREFIX=/api/secondme
SECONDME_OAUTH_URL=https://go.second.me/oauth/
SECONDME_TOKEN_ENDPOINT=https://app.mindos.com/gate/lab/api/oauth/token
